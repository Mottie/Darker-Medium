{
	"name": "darker-medium",
	"version": "1.4.1",
	"description": "Read Medium stories with happy eyes",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mottie/Darker-Medium"
	},
	"author": "Rob Garrison",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Mottie/Darker-Medium/issues"
	},
	"homepage": "https://github.com/Mottie/Darker-Medium",
	"scripts": {
		"test": "xo && stylelint --quiet --color -- style.css gist.css options/*.css",
		"update": "updates -u && npm install",
		"build": "node build/build.js"
	},
	"devDependencies": {
		"archiver": "^3.0.0",
		"code-prettify": "^0.1.0",
		"stylelint": "^9.9.0",
		"updates": "^5.4.3",
		"xo": "^0.23.0"
	},
	"eslintIgnore": [
		"js/run_prettify.js"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"one-var": [
				"error",
				"always"
			],
			"import/no-unassigned-import": 0,
			"no-mixed-operators": 0,
			"no-mixed-requires": 0,
			"no-negated-condition": 0,
			"no-unused-vars": 2,
			"quotes": [
				"error",
				"double",
				{
					"avoidEscape": true
				}
			],
			"space-before-function-paren": 0,
			"unicorn/no-abusive-eslint-disable": 0,
			"unicorn/no-hex-escape": 0,
			"unicorn/escape-case": 0
		}
	}
}
